@model BulgarianHistory.Data.Entities.FamousPerson

@{
    ViewData["Title"] = "Изтриване на личност";
}

<h1>Изтриване на личност</h1>

<h3>Сигурен ли си, че искаш да изтриеш "@Model.Name"?</h3>

<form asp-action="DeleteConfirmed" method="post">
    <input type="hidden" asp-for="Id" />
    <button type="submit" class="btn btn-danger">Изтрий</button>
    <a asp-action="Index" class="btn btn-secondary">Отказ</a>
</form>
