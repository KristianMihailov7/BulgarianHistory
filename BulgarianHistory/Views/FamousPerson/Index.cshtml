@model IEnumerable<BulgarianHistory.Data.Entities.FamousPerson>

@{
    ViewData["Title"] = "Личности";
}

<h1 class="text-center">Личности</h1>

<p class="text-end">
    <a asp-action="Create" class="btn btn-success">Добави нова личност</a>
</p>

<table class="table table-dark table-striped">
    <thead>
        <tr>
            <th>Име</th>
            <th>Епоха</th>
            <th>Действия</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>@item.Name</td>
                <td>@item.Era?.Name</td>
                <td>
                    <a asp-action="Edit" asp-route-id="@item.Id" class="btn btn-warning btn-sm">Редакция</a>
                    <a asp-action="Details" asp-route-id="@item.Id" class="btn btn-info btn-sm">Детайли</a>

                    <form asp-action="Delete" asp-route-id="@item.Id" method="post" class="d-inline">
                        @Html.AntiForgeryToken()
                        <button type="submit" class="btn btn-danger btn-sm"
                                onclick="return confirm('Сигурен ли си, че искаш да изтриеш @item.Name?')">
                            Изтрий
                        </button>
                    </form>
                </td>
            </tr>
        }
    </tbody>
</table>
