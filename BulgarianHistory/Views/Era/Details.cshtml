@model BulgarianHistory.Web.ViewModel.Details.EraDetailsViewModel

@{
    ViewData["Title"] = Model.Name;
    Layout = "_Layout"; // увери се, че използваш UTF-8 layout
}

<div class="container mt-4 bg-dark text-light p-4 rounded shadow">
    <div class="text-center mb-4">
        <h1 class="text-warning fw-bold">@Model.Name</h1>

        @if (!string.IsNullOrWhiteSpace(Model.ImageUrl))
        {
            <img src="@Model.ImageUrl"
                 class="img-fluid rounded shadow-lg my-3"
                 style="max-height: 400px; object-fit: cover;" />
        }

        <p class="fs-5">@Model.Description</p>
    </div>

    <div class="row">
        @if (Model.Events.Any())
        {
            <div class="col-md-4 mb-4">
                <div class="card bg-secondary text-light border-warning border-3 shadow">
                    <div class="card-body text-center">
                        <h4 class="card-title text-warning">Събития</h4>
                        <ul class="list-group list-group-flush">
                            @foreach (var item in Model.Events)
                            {
                                <li class="list-group-item bg-dark text-light border-secondary d-flex justify-content-between align-items-center">
                                    @item.Name
                                    <a href="/Event/Details/@item.Id" class="btn btn-sm btn-outline-warning">Преглед</a>
                                </li>
                            }
                        </ul>
                    </div>
                </div>
            </div>
        }

        @if (Model.Cities.Any())
        {
            <div class="col-md-4 mb-4">
                <div class="card bg-secondary text-light border-warning border-3 shadow">
                    <div class="card-body text-center">
                        <h4 class="card-title text-warning">Градове</h4>
                        <ul class="list-group list-group-flush">
                            @foreach (var item in Model.Cities)
                            {
                                <li class="list-group-item bg-dark text-light border-secondary d-flex justify-content-between align-items-center">
                                    @item.Name
                                    <a href="/City/Details/@item.Id" class="btn btn-sm btn-outline-warning">Преглед</a>
                                </li>
                            }
                        </ul>
                    </div>
                </div>
            </div>
        }

        @if (Model.FamousPeople.Any())
        {
            <div class="col-md-4 mb-4">
                <div class="card bg-secondary text-light border-warning border-3 shadow">
                    <div class="card-body text-center">
                        <h4 class="card-title text-warning">Известни личности</h4>
                        <ul class="list-group list-group-flush">
                            @foreach (var item in Model.FamousPeople)
                            {
                                <li class="list-group-item bg-dark text-light border-secondary d-flex justify-content-between align-items-center">
                                    @item.Name
                                    <a href="/FamousPerson/Details/@item.Id" class="btn btn-sm btn-outline-warning">Преглед</a>
                                </li>
                            }
                        </ul>
                    </div>
                </div>
            </div>
        }
    </div>
</div>