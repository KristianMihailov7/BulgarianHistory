@model IEnumerable<BulgarianHistory.Data.Entities.Fact>

@{
    ViewData["Title"] = "Факти";
}

<h1 class="text-center">Факти</h1>

<p class="text-end">
    <a asp-action="Create" class="btn btn-success">Добави нов факт</a>
</p>

<table class="table table-dark table-striped">
    <thead>
        <tr>
            <th>Заглавие</th>
            <th>Събитие</th>
            <th>Действия</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>@item.Title</td>
                <td>@item.Event?.Name</td>
                <td>
                    <a asp-action="Edit" asp-route-id="@item.Id" class="btn btn-warning btn-sm">Редакция</a>
                    <a asp-action="Details" asp-route-id="@item.Id" class="btn btn-info btn-sm">Детайли</a>
                    <a asp-action="Delete" asp-route-id="@item.Id" class="btn btn-danger btn-sm">Изтриване</a>
                </td>
            </tr>
        }
    </tbody>
</table>