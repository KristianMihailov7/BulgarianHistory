@model IEnumerable<BulgarianHistory.Data.Entities.Event>

@{
    ViewData["Title"] = "Събития";
}

<h2 class="mb-3 text-warning">Събития</h2>

<p>
    <a asp-action="Create" class="btn btn-success">Добави събитие</a>
</p>

<table class="table table-dark table-striped">
    <thead>
        <tr>
            <th>Име</th>
            <th>Година</th>
            <th>Епоха</th>
            <th>Действия</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>@item.Name</td>
                <td>@item.Year</td>
                <td>@item.Era?.Name</td>
                <td>
                    <a asp-action="Edit" asp-route-id="@item.Id" class="btn btn-sm btn-warning">Редакция</a>
                    <a asp-action="Details" asp-route-id="@item.Id" class="btn btn-sm btn-info">Детайли</a>
                    <form asp-action="Delete" asp-route-id="@item.Id" method="post" class="d-inline">
                        <button class="btn btn-sm btn-danger">Изтрий</button>
                    </form>
                </td>
            </tr>
        }
    </tbody>
</table>
