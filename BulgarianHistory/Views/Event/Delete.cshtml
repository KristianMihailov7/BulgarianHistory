@model BulgarianHistory.Data.Entities.Event

@{
    ViewData["Title"] = "Изтриване на събитие";
}

<h1 class="text-danger">Изтриване на събитие</h1>

<h4 class="text-warning">Сигурни ли сте, че искате да изтриете "@Model.Name"?</h4>

<form asp-action="Delete" asp-route-id="@Model.Id" method="post">
    <input type="hidden" asp-for="Id" />
    <button type="submit" class="btn btn-danger">Изтрий</button>
    <a asp-action="Index" class="btn btn-secondary">Назад</a>
</form>
